<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/pm_primary</item>
        <item name="colorPrimaryDark">@color/pm_primary_dark</item>
        <item name="colorAccent">@color/pm_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Settings activity theme -->
    <style name="SettingsTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/pm_primary</item>
        <item name="android:colorPrimaryDark">@color/pm_primary_dark</item>
    </style>

</resources>